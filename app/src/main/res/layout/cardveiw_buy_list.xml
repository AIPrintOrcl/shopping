<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/buyListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="1번"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/buyListImage"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/buyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_storage_black_24dp"
            android:drawableStart="@drawable/ic_storage_black_24dp"
            android:padding="3dp"
            android:text="리스트명"
            android:textColor="#000000"
            android:textColorHint="#ffffff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="BUY 물품 수 : "
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/itemBuyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="00"
                android:textColor="@color/colorBlue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text=" 개"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="BUY 총 가격 : "
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/itemBuyPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="00"
                android:textColor="@color/colorBlue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text=" 원"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <Button
            android:id="@+id/buyYetListUpdateButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorAdd"
            android:gravity="center"
            android:text="BUY -> YET"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/buyListDeleteButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorDanger"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="모든 BUY 삭제"
            android:textColor="#ffffff"
            android:textSize="15dp" />


    </LinearLayout>



</android.support.v7.widget.CardView>